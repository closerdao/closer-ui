{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "NEXT_PUBLIC_CDN_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_PLATFORM",
        "NEXT_PUBLIC_LOG_REQUESTS",
        "NEXT_PUBLIC_STRIPE_PUB_KEY",
        "NEXT_PUBLIC_REGISTRATION_MODE"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
