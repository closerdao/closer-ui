{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "NEXT_PUBLIC_CDN_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_PLATFORM",
        "NEXT_PUBLIC_PLATFORM_URL",
        "NEXT_PUBLIC_LOG_REQUESTS",
        "NEXT_PUBLIC_STRIPE_PUB_KEY",
        "NEXT_PUBLIC_GA_MEASUREMENT_ID",
        "NEXT_PUBLIC_REGISTRATION_MODE",
        "NEXT_PUBLIC_TOKEN_SALE_DATE",
        "NEXT_PUBLIC_FEATURE_BOOKING",
        "NEXT_PUBLIC_FEATURE_SUBSCRIPTIONS",
        "NEXT_PUBLIC_FEATURE_WEB3_BOOKING",
        "NEXT_PUBLIC_FEATURE_WEB3_WALLET",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_VAT_RATE"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {},
    "test:watch": {
      "cache": false
    }
  }
}
